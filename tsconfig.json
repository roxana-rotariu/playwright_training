{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "types": ["node", "@playwright/test"],
    "skipLibCheck": true
  },
  "include": [
    "tests",
    "pages",
    "components",
    "flows",
    "fixtures",
    "utils",
    "services",
    "config",
    "test-setup"
  ]
}
